{% extends 'base.html.twig' %}

{% block title %}Classes{% endblock %}

{% block body %}
    <h1>{{ class.name }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Last name</th>
                <th>First name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.firstName }}</td>
                <td>
                    <a href="{{ path('app_students_show', {'id': student.id}) }}">show</a>
                    <a href="{{ path('app_students_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No students found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classes_index') }}">back to list</a>

    <a href="{{ path('app_classes_edit', {'id': class.id}) }}">edit</a>

    {{ include('classes/_delete_form.html.twig') }}
{% endblock %}
